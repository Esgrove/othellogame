{
  "name": "othello_typescript",
  "version": "0.1.0",
  "description": "A simple Othello CLI game implementation",
  "type": "module",
  "exports": "./src/othello.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "bun build ./src/othello.ts --outdir ./dist --target node",
    "othello": "bun src/othello.ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,mjs}\"",
    "format-check": "prettier --check \"**/*.{ts,tsx,js,mjs}\"",
    "fmt": "bun format",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "lint-check": "eslint \"src/**/*.{ts,tsx}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Esgrove/othellogame.git"
  },
  "author": "Esgrove",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Esgrove/othellogame/issues"
  },
  "homepage": "https://github.com/Esgrove/othellogame#readme",
  "engines": {
    "node": ">=22"
  },
  "bin": {
    "othello": "./src/othello.ts"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "prettier": "3.6.2",
    "typescript": "^5.9.3"
  }
}
