{
  "compilerOptions": {
    "target": "ES2021",
    "module": "Node16",
    "rootDir": "./",
    "outDir": "./",
    "moduleResolution": "esnext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
